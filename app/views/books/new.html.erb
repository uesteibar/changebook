<div class="row">

  <div class="col-md-6 col-md-offset-3">

    <%= form_for [current_user, @book] do |f| %>
    <div class="form-group">
      <%= f.label :title%>
      <%= f.text_field :title, class: "form-control text-center" %>
    </div>

    <div class="form-group">
      <%= f.label :to_give_away%>
      <%= f.check_box :to_give_away %>
    </div>

    <div class="form-group">
      <%= f.label :to_exchange%>
      <%= f.check_box :to_exchange %>
    </div>

    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-primary btn-block" %>
    </div>
    <% end %>
  </div>
</div>
