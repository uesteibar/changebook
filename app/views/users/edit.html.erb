<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <div class="card">
      <%= form_for @user, multipart: true, url: user_path(@user), html: { method: :put } do |f| %>

      <div class="form-group">
        <%= f.label :bio %><br/>
        <%= f.text_area :bio, rows: "6", class: "form-control" %>
      </div>

      <%= f.text_field :latitude, id: "latitude" %>
      <%= f.text_field :longitude, id: "longitude" %>

      <div class="form-group">
        <%= f.label :location %><br/>
        <%= f.text_field :location, id: "gmaps-autocomplete", name: "location", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :avatar %><br/>
        <%= f.file_field :avatar, id: "avatar" %>
        <p class="help-block">Choose an avatar for you.</p>
      </div>

      <div class="form-group">
        <%= f.submit "Update", data: @user.id, class: "btn btn-primary btn-block", id: "submit-profile-edit" %>
      </div>
      <% end %>
    </div>

  </div>
</div>

<script type="text/javascript">
  $(document).ready(function () {
    initialize();
  });
</script>
