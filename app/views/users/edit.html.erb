<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <%= form_for @user, url: user_path(@user), html: { method: :put } do |f| %>

    <div class="form-group">
      <%= f.label :bio %><br/>
      <%= f.text_area :bio, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Update", class: "btn btn-primary btn-block" %>
    </div>
    <% end %>

  </div>
</div>
