<div class="row">
  <div class="col-md-5 col-md-offset-1">
    <div class="card card--user">
      <div class="user-header">
        <h1 class="text-center"><%= @user.username %></h1>
      </div>

      <%= image_tag @user.avatar.url(:square) %>

      <p class="text-center">
        <%= @user.location %>
      </p>

      <p class="lead text-center">
        <%= @user.bio %>
      </p>

    </div>
  </div>
</div>
