<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="card">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :username %><br/>
        <%= f.text_field :username, autofocus: true, class: "form-control text-center" %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br/>
        <%= f.email_field :email, class: "form-control text-center" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>
          characters minimum)</em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "off", class: "form-control text-center" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control text-center" %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
