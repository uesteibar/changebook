<div class="row">

  <div class="col-md-6 col-md-offset-3">

    <form class="book" id="book-search">
      <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" id="title" name="title" type="text" value="">
      </div>
      <input  style="visibility: hidden;" type="submit"/>
    </form>

    <div class="search-results" id="search-results"></div>
  </div>
</div>

<div id="create-book" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button aria-label="Close" class="close" data-dismiss="modal" type="button">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">New book</h4>
      </div>
      <div class="modal-body">
        <%= form_for [@book], multipart: true do |f| %>
          <div class="form-group">
            <%= f.label :title%>
            <%= f.text_field :title, class: "form-control text-center" %>
          </div>

          <div class="form-group">
            <%= f.label :author%>
            <%= f.text_field :author, class: "form-control text-center" %>
          </div>

          <div class="form-group">
            <%= f.label :genre%>
            <%= f.select(:genre_id, options_for_select(@genres.order(:name).to_a.map{ |genre| [genre.name, genre.id] }), {}, {class: "form-control"}) %>
          </div>

          <div class="form-group">
            <%= f.label :cover %><br/>
            <%= f.file_field :cover %>
            <p class="help-block">Upload a cover.</p>
          </div>

          <div class="form-group">
            <%= f.submit "Submit", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
<!-- /.modal-content -->
  </div>
<!-- /.modal-dialog -->
</div>
<!-- /.modal -->

<div id="new-offering" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button aria-label="Close" class="close" data-dismiss="modal" type="button">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">New offering</h4>
      </div>
      <div class="modal-body">
        <form id="new-offer">
          <div class="form-group">
            <label for="to-give-away">To give away</label>
            <input type="checkbox" name="to-give-away" value="true">
          </div>
          <div class="form-group">
            <label for="to-exchange">To exchange</label>
            <input type="checkbox" name="to-exchange" value="true">
          </div>

          <input type="submit" name="submit" value="Offer" class="btn btn-primary">
        </form>
      </div>
    </div>
<!-- /.modal-content -->
  </div>
<!-- /.modal-dialog -->
</div>
<!-- /.modal -->

<script type="text/javascript">
  var bookId = -1;
  window.bookPredictor.init('#title');
  window.bookNewManager.init();
  window.bookOwnershipManager.init();
</script>
