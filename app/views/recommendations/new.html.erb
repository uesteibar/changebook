<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <div class="row">
      <div class="col-md-4">
        <%= image_tag @recommendation.book.cover.url(:medium), class: "img-responsive center-block" %>
      </div>
      <div class="col-md-6 col-md-offset-1">
        <h1><%= @recommendation.book.title.titleize %></h1>
        <p class="lead">
          <%= @recommendation.book.author %>
        </p>
        <%= form_for [@recommendation.book, @recommendation] do |f| %>
          <div class="form-group">
            <%= f.label "Tell us why you recommend this book"%>
            <%= f.text_area :comment, rows: "6", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label "From 0 to 100, how much did you like it?"%>
            <%= f.number_field :valoration, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "Submit", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>

    </div>

    <div class="margin-top">

    </div>
  </div>
</div>
